    <script>
        // Wait for fonts and DOM to load
        window.addEventListener("load", () => {
            document.body.style.opacity = 1;
            
            gsap.registerPlugin(ScrollTrigger);

            // 1. HERO ANIMATION
            gsap.to(".hero-content", {
                opacity: 1,
                y: 0,
                duration: 1.5,
                ease: "power3.out",
                delay: 0.2
            });

            gsap.to(".hero-bg", {
                scrollTrigger: {
                    trigger: "#hero",
                    start: "top top",
                    end: "bottom top",
                    scrub: true
                },
                y: 200 // Parallax effect
            });

            // 2. CHALLENGE SECTION (Text Reveal)
            const challengeTl = gsap.timeline({
                scrollTrigger: {
                    trigger: "#challenge",
                    start: "top 60%",
                    end: "bottom bottom",
                    toggleActions: "play none none reverse"
                }
            });

            challengeTl.to(".f-card-1", { opacity: 1, x: 0, duration: 0.6 })
                       .to(".f-card-2", { opacity: 1, x: 0, duration: 0.6 }, "-=0.2");

            // 3. HORIZONTAL SCROLL SECTION
            let sections = gsap.utils.toArray(".dimension-slide");
            
            gsap.to(sections, {
                xPercent: -100 * (sections.length - 1),
                ease: "none",
                scrollTrigger: {
                    trigger: "#dimensions-container",
                    pin: true,
                    scrub: 1,
                    snap: 1 / (sections.length - 1),
                    end: () => "+=" + document.querySelector("#dimensions-wrapper").offsetWidth
                }
            });

            // 4. INTEGRATION ANIMATION
            gsap.from(".circle-icon", {
                scrollTrigger: {
                    trigger: "#integration",
                    start: "top center",
                    toggleActions: "play none none reverse"
                },
                scale: 0,
                opacity: 0,
                duration: 1,
                stagger: 0.2,
                ease: "elastic.out(1, 0.5)"
            });
            
            gsap.from(".plus-sign", {
                scrollTrigger: {
                    trigger: "#integration",
                    start: "top center",
                },
                rotate: -180,
                opacity: 0,
                duration: 1,
                delay: 0.5
            });

        });
    </script>
