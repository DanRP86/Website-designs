    <script>
        // Terminal Effect
        const terminalText = [
            "> Initializing Agentic Protocols...",
            "> Connecting to Enterprise Data Layer...",
            "> Optimization detected: +40% Efficiency",
            "> System Ready. Awaiting Command."
        ];
        
        const terminalOutput = document.getElementById('terminal-output');
        let lineIndex = 0;
        let charIndex = 0;

        function typeWriter() {
            if (lineIndex < terminalText.length) {
                if (charIndex === 0) {
                    const div = document.createElement('div');
                    div.className = lineIndex === terminalText.length - 1 ? "typing-cursor text-white font-bold" : "";
                    div.id = `line-${lineIndex}`;
                    terminalOutput.appendChild(div);
                }
                
                const currentLine = document.getElementById(`line-${lineIndex}`);
                currentLine.textContent += terminalText[lineIndex].charAt(charIndex);
                charIndex++;

                if (charIndex < terminalText[lineIndex].length) {
                    setTimeout(typeWriter, 30);
                } else {
                    if (lineIndex < terminalText.length - 1) {
                        document.querySelector('.typing-cursor')?.classList.remove('typing-cursor'); // Remove cursor from prev line
                        lineIndex++;
                        charIndex = 0;
                        setTimeout(typeWriter, 400);
                    }
                }
            }
        }
        
        setTimeout(typeWriter, 1000);

        // Data
        const modules = [
            {
                title: "Cognitive Architecture",
                phase: "Phase 1: Foundation",
                icon: "fa-brain",
                iconColor: "bg-blue-600",
                desc: "Before we automate, we must understand the engine. This phase demystifies LLMs, moving from 'Magic' to 'Math'.",
                roi: "Risk Mitigation. You will understand exactly why models hallucinate and how to implement 'Guardrails' that prevent your brand from generating incorrect data.",
                outcome: "Build a 'Strategy Audit' bot that takes raw Excel data and writes a board-ready summary in your specific tone of voice, with 0% hallucination.",
                topics: ["Prompt Engineering vs Prompt Tuning", "Chain-of-Thought Reasoning (CoT)", "Context Windows & Token Economics"],
                tools: ["ChatGPT Enterprise", "Claude 3 Opus", "Playground"]
            },
            {
                title: "Infrastructure & Data",
                phase: "Phase 2: The Bridge",
                icon: "fa-network-wired",
                iconColor: "bg-purple-600",
                desc: "The transition from Chatbot to Software. Learning the basics of Python and APIs to glue AI to your internal systems.",
                roi: "Security & Independence. You will stop relying on public tools. You will learn to run 'Local Agents' that process confidential PDFs on your laptop without sending data to the cloud.",
                outcome: "Create a secure pipeline that watches your email inbox, extracts invoices, reads them with AI, and updates a local CSV file automatically.",
                topics: ["JSON Data Structures", "Rest APIs & Webhooks", "Python Basics for Automation"],
                tools: ["VS Code", "Python 3.10", "Postman"]
            },
            {
                title: "Agentic Crews",
                phase: "Phase 3: Autonomy",
                icon: "fa-users-gear",
                iconColor: "bg-emerald-600",
                desc: "The final frontier. creating multiple agents with distinct roles (Researcher, Writer, Reviewer) that collaborate.",
                roi: "Scale. A single human manages 10 agents. This is how you 10x the output of your department without increasing headcount.",
                outcome: "Deploy a 'Market Watch Crew': Agent A scrapes news, Agent B analyzes sentiment, Agent C drafts a report, Agent D (Manager) critiques it.",
                topics: ["ReAct (Reasoning + Acting)", "Multi-Agent Orchestration", "Human-in-the-loop Governance"],
                tools: ["CrewAI", "LangGraph", "Microsoft AutoGen"]
            },
            {
                title: "Global Deployment",
                phase: "Phase 4: Enterprise Scale",
                icon: "fa-globe",
                iconColor: "bg-indigo-600",
                desc: "Taking your pilots to production. Governance, cost monitoring, and integration with IT security policies.",
                roi: "Sustainability. ensuring your AI strategy doesn't bankrupt the budget. Optimizing between 'Smart' (Expensive) models and 'Fast' (Cheap) models.",
                outcome: "A full governance dashboard showing agent activity, cost per token, and success rates across the department.",
                topics: ["Cost Optimization (Model Routing)", "Evaluation Frameworks (LLM-as-a-Judge)", "Enterprise Security Deployment"],
                tools: ["LangSmith", "Azure OpenAI", "Docker"]
            }
        ];

        // Modal Logic
        const modalOverlay = document.getElementById('modal-overlay');
        const modalContent = document.getElementById('modal-content');

        function openModal(index) {
            const data = modules[index];
            
            // Populate
            document.getElementById('m-title').innerText = data.title;
            document.getElementById('m-phase').innerText = data.phase;
            document.getElementById('m-desc').innerText = data.desc;
            document.getElementById('m-roi').innerText = data.roi;
            document.getElementById('m-outcome').innerText = data.outcome;
            
            // Icon styling
            const iconDiv = document.getElementById('m-icon');
            iconDiv.className = `w-12 h-12 rounded-lg flex items-center justify-center text-2xl mb-6 text-white shadow-lg ${data.iconColor}`;
            iconDiv.innerHTML = `<i class="fa-solid ${data.icon}"></i>`;

            // Lists
            const topics = document.getElementById('m-topics');
            topics.innerHTML = '';
            data.topics.forEach(t => topics.innerHTML += `<li class="flex items-center gap-3"><i class="fa-solid fa-check text-green-400 text-xs"></i> ${t}</li>`);

            const tools = document.getElementById('m-tools');
            tools.innerHTML = '';
            data.tools.forEach(t => tools.innerHTML += `<span class="px-3 py-1 bg-slate-700 rounded text-xs text-white border border-slate-600">${t}</span>`);

            // Show
            modalOverlay.classList.remove('hidden');
            // Slight delay to allow display:block to apply before opacity transition
            setTimeout(() => {
                modalOverlay.classList.remove('opacity-0');
                modalContent.classList.add('modal-enter');
            }, 10);
        }

        function closeModal() {
            modalOverlay.classList.add('opacity-0');
            setTimeout(() => {
                modalOverlay.classList.add('hidden');
                modalContent.classList.remove('modal-enter');
            }, 300);
        }

        // Close on click outside
        modalOverlay.addEventListener('click', (e) => {
            if (e.target === modalOverlay) closeModal();
        });
    </script>
</body>
