    <div class="progress-line"><div class="progress-fill" id="progress"></div></div>

    <script>
        (function() {
        
        /* --- VARIABLES --- */
        const assembly = document.getElementById('assembly');
        const core = document.getElementById('core');
        const rings = [document.getElementById('ring1'), document.getElementById('ring2'), document.getElementById('ring3')];
        const cards = {
            evolution: document.getElementById('card-evolution'),
            risk: document.getElementById('card-risk'),
            guard: document.getElementById('card-guard'),
            code: document.getElementById('card-code'),
            human: document.getElementById('card-human'),
            trust: document.getElementById('card-trust')
        };
        
        // Color Palette for Core
        const colors = {
            base: '#D4AF37',
            alert: '#ff3333',
            safe: '#00f3ff',
            success: '#00ff88',
            white: '#ffffff'
        };

        /* --- INTERSECTION OBSERVER (TEXT) --- */
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if(entry.isIntersecting) {
                    entry.target.classList.add('active');
                    // Update Chapter Number
                    const id = entry.target.id.split('-')[1];
                    document.getElementById('chapter-num').innerText = "0" + id;
                } else {
                    entry.target.classList.remove('active');
                }
            });
        }, { threshold: 0.4 });

        document.querySelectorAll('section').forEach(sec => observer.observe(sec));

        /* --- SCROLL LOGIC --- */
        let scrollPos = 0;
        let targetScrollPos = 0;

        function lerp(start, end, t) { return start * (1 - t) + end * t; }

        window.addEventListener('scroll', () => { targetScrollPos = window.scrollY; });

        function updateEngine() {
            scrollPos = lerp(scrollPos, targetScrollPos, 0.05); // Slower lerp for heavier feel
            
            const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
            const progress = scrollPos / maxScroll; // 0.0 to 1.0
            
            // Update Progress Bar
            document.getElementById('progress').style.width = (progress * 100) + '%';

            // --- 1. GEAR ANIMATION ---
            // Continuous rotation based on scroll
            rings[0].style.transform = `translate(-50%, -50%) rotateZ(${progress * 360}deg)`;
            rings[1].style.transform = `translate(-50%, -50%) rotateZ(${progress * -720}deg)`;
            rings[2].style.transform = `translate(-50%, -50%) rotateX(${progress * 360}deg) rotateY(${progress * 180}deg)`;
            
            // Assembly Tilt (Wobble effect)
            assembly.style.transform = `
                rotateX(${Math.sin(progress * Math.PI * 2) * 20}deg) 
                rotateY(${Math.cos(progress * Math.PI * 2) * 20}deg)
                scale(${1 - (Math.sin(progress * Math.PI) * 0.1)})
            `;

            // --- 2. CARD CHOREOGRAPHY ---
            // Reset all first
            Object.values(cards).forEach(c => {
                c.style.opacity = 0;
                c.style.transform = 'translate(-50%, -50%) scale(0.5)';
                c.style.zIndex = 0;
            });

            // Helper to show card
            const showCard = (card, x, y, rotZ, color) => {
                card.style.opacity = 1;
                card.style.transform = `translate(calc(-50% + ${x}px), calc(-50% + ${y}px)) rotateZ(${rotZ}deg) scale(1)`;
                card.style.zIndex = 10;
                core.style.borderColor = color;
                core.style.color = color;
                core.style.textShadow = `0 0 20px ${color}`;
            };

            // Timeline mapping (approximate based on sections)
            // Sec 1 (0.0 - 0.1): Evolution
            if (progress < 0.15) {
                showCard(cards.evolution, 0, 0, 0, colors.base);
            }
            // Sec 2 (0.15 - 0.25): Risk
            else if (progress < 0.30) {
                showCard(cards.risk, 0, 0, 5, colors.alert);
            }
            // Sec 3 & 4 (0.30 - 0.50): Guardrails
            else if (progress < 0.50) {
                showCard(cards.guard, -200, 0, -10, colors.safe);
                // Transition effect
                if(progress > 0.40) {
                    cards.risk.style.opacity = 0.2;
                    cards.risk.style.transform = `translate(calc(-50% + 200px), -50%) scale(0.8)`;
                }
            }
            // Sec 5 (0.50 - 0.65): Deterministic Code
            else if (progress < 0.65) {
                showCard(cards.code, 200, 0, 10, colors.success);
                cards.guard.style.opacity = 0.2; // Keep previous visible faintly
                cards.guard.style.transform = `translate(calc(-50% - 200px), -50%) scale(0.8)`;
            }
            // Sec 6 (0.65 - 0.80): Human
            else if (progress < 0.85) {
                showCard(cards.human, 0, -200, 0, colors.base);
            }
            // Sec 7-9: Trust/Tower
            else {
                showCard(cards.trust, 0, 0, 0, colors.white);
                // Swarm effect for others?
                cards.human.style.opacity = 0.3;
                cards.human.style.transform = `translate(calc(-50% - 250px), -50%) rotateZ(-10deg) scale(0.7)`;
                cards.code.style.opacity = 0.3;
                cards.code.style.transform = `translate(calc(-50% + 250px), -50%) rotateZ(10deg) scale(0.7)`;
            }

            requestAnimationFrame(updateEngine);
        }
        updateEngine();

        /* --- BACKGROUND PARTICLES --- */
        const canvas = document.getElementById('bg-canvas');
        const ctx = canvas.getContext('2d');
        let cw, ch;
        let particles = [];

        function resize() { cw = canvas.width = window.innerWidth; ch = canvas.height = window.innerHeight; }
        window.addEventListener('resize', resize);
        resize();

        class Particle {
            constructor() {
                this.x = Math.random() * cw; this.y = Math.random() * ch;
                this.vx = (Math.random() - 0.5) * 0.5; this.vy = (Math.random() - 0.5) * 0.5;
                this.size = Math.random() * 2;
            }
            update() {
                this.x += this.vx; this.y += this.vy;
                if(this.x < 0) this.x = cw; if(this.x > cw) this.x = 0;
                if(this.y < 0) this.y = ch; if(this.y > ch) this.y = 0;
            }
            draw() {
                ctx.fillStyle = 'rgba(255,255,255,0.2)';
                ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI*2); ctx.fill();
            }
        }

        for(let i=0; i<80; i++) particles.push(new Particle());

        function animateParticles() {
            ctx.clearRect(0,0,cw,ch);
            particles.forEach(p => { p.update(); p.draw(); });
            requestAnimationFrame(animateParticles);
        }
        animateParticles();

        })();
    </script>
</body>
</html>
